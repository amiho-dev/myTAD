# Database Configuration Example
# Copy this file to .env and update with your values

# Database Configuration
DB_HOST=your-database-host.com:3306
DB_USER=database_username
DB_PASS=database_password
DB_NAME=database_name

# Session Configuration
SESSION_TIMEOUT=86400
REMEMBER_ME_DURATION=2592000

# Security Configuration
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_WINDOW=900
ACCOUNT_LOCK_DURATION=1800

# Email Configuration
MAIL_FROM=security@yourdomain.com
MAIL_FROM_NAME=myTAD Security
MAIL_SMTP_HOST=smtp.yourdomain.com
MAIL_SMTP_PORT=587
MAIL_SMTP_USER=your-email@yourdomain.com
MAIL_SMTP_PASS=your-email-password

# Application Configuration
APP_NAME=myTAD
APP_URL=https://yourdomain.com
APP_ENV=production

# Two-Factor Authentication
TOTP_WINDOW=1
BACKUP_CODE_COUNT=10

# Password Policy
PASSWORD_MIN_LENGTH=10
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true
